{
  "title": "On-Call Overview",
  "description": "On-call metrics, incident stats, and team health",
  "tags": ["oncall", "devctl", "pagerduty", "operations"],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "panels": [
    {
      "id": 1,
      "title": "Active Incidents",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(pagerduty_incidents_active_total)",
          "legendFormat": "Active"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 3}
            ]
          }
        }
      }
    },
    {
      "id": 2,
      "title": "Incidents (24h)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(pagerduty_incidents_total[24h]))",
          "legendFormat": "24h"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "area"
      }
    },
    {
      "id": 3,
      "title": "MTTA (Mean Time to Acknowledge)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "refId": "A",
          "expr": "avg(pagerduty_incidents_time_to_acknowledge_seconds)",
          "legendFormat": "MTTA"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 300},
              {"color": "red", "value": 600}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "MTTR (Mean Time to Resolve)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "refId": "A",
          "expr": "avg(pagerduty_incidents_time_to_resolve_seconds)",
          "legendFormat": "MTTR"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1800},
              {"color": "red", "value": 3600}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Incidents Over Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(pagerduty_incidents_total[1h]))",
          "legendFormat": "Incidents"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "fillOpacity": 50
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Incidents by Urgency",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 4},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(pagerduty_incidents_total) by (urgency)",
          "legendFormat": "{{urgency}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "id": 7,
      "title": "Incidents by Service",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 4},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(pagerduty_incidents_total) by (service)",
          "legendFormat": "{{service}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right"
        }
      }
    },
    {
      "id": 8,
      "title": "Time to Acknowledge Distribution",
      "type": "histogram",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 12},
      "targets": [
        {
          "refId": "A",
          "expr": "pagerduty_incidents_time_to_acknowledge_seconds",
          "legendFormat": "TTA"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 9,
      "title": "Time to Resolve Distribution",
      "type": "histogram",
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 12},
      "targets": [
        {
          "refId": "A",
          "expr": "pagerduty_incidents_time_to_resolve_seconds",
          "legendFormat": "TTR"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "id": 10,
      "title": "Pager Load by Hour",
      "type": "heatmap",
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 18},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(pagerduty_incidents_total[1h])) by (hour)",
          "legendFormat": "{{hour}}"
        }
      ],
      "options": {
        "calculate": false,
        "cellGap": 1,
        "color": {
          "mode": "scheme",
          "scheme": "Oranges"
        }
      }
    },
    {
      "id": 11,
      "title": "Escalations",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(pagerduty_escalations_total[7d]))",
          "legendFormat": "Escalations (7d)"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 5},
              {"color": "red", "value": 10}
            ]
          }
        }
      }
    },
    {
      "id": 12,
      "title": "Pages per Responder (7d)",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 18, "x": 6, "y": 24},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(pagerduty_incidents_total[7d])) by (responder)",
          "legendFormat": "{{responder}}"
        }
      ],
      "options": {
        "displayMode": "gradient",
        "orientation": "horizontal"
      }
    },
    {
      "id": 13,
      "title": "Recent Incidents",
      "type": "table",
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
      "targets": [
        {
          "refId": "A",
          "expr": "pagerduty_incidents_info",
          "format": "table",
          "instant": true
        }
      ],
      "options": {
        "showHeader": true
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true, "__name__": true}
          }
        }
      ]
    }
  ],
  "annotations": {
    "list": [
      {
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": false,
        "iconColor": "rgba(255, 96, 96, 1)",
        "name": "Incidents",
        "type": "tags",
        "tags": ["incident"]
      },
      {
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": false,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "On-Call Handoffs",
        "type": "tags",
        "tags": ["oncall", "handoff"]
      }
    ]
  },
  "time": {"from": "now-7d", "to": "now"},
  "refresh": "5m"
}
